@font-face
  font-family 'Work Sans'
  font-style normal
  font-weight normal
    
body
  position relative
  background-color #F4F5FC
  min-width 320px
  margin 0
  padding 0
  font-family 'Work Sans'
  font-size 14px
  line-height 16px
  font-style normal
  color #000000

img
  max-width 100%
  height auto

.visually-hidden:not(:focus):not(:active)
input:focus.visually-hidden
input:active.visually-hidden 
  position: absolute
  width 1px
  height 1px
  margin -1px
  border 0
  padding 0
  white-space nowrap
  clip-path inset(100%)
  clip: rect(0 0 0 0)
  overflow hidden

.form
  position absolute
  display flex
  top 50%
  left 35%
  width 665px
  height 481px
  background-color #FFFFFF
  
.text
  width 138px
  background-color #5A61ED
  
.form__column--text
  color #FFFFFF
  transform rotate(-90deg)
  
.contact-form
  width 411px
  
.filter
  padding 30px 20px
  